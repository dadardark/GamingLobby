<Page x:Class="ClientInterface.LobbyList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LobbyList">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Height="60" Margin="0,17,0,0" TextWrapping="Wrap" Width="528" TextAlignment="Center" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"><Run Text="Welcome to the server"/><LineBreak/><Run Text="Please select a lobby"/></TextBlock>
        <StackPanel Name="stackPanel" Grid.Row="1" Grid.Column="1"  Margin="0,120,0,0" VerticalAlignment="Center">
            <Button Name="foodLobby" Content="Food" Click="foodLobbyButton_Click"/>
            <Button Content="Lobby 2"/>
            <Button Content="Lobby 3"/>
            <Button Content="Lobby 4"/>
        </StackPanel>
    </Grid>
</Page>
