<Page x:Class="ClientInterface.LobbyRoomTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="LobbyRoomTemplate">
    <Grid x:Name="gridMain" Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Reserved for future use -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left column reserved for future use -->

        <!-- Center column -->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="16">
            <Button Name="exitButton" Content="Exit" FontSize="24" Padding="10,5" Click="exitButton_Click" Width="100"/>
            <TextBlock Name="lobbyTitle" Text="Lobby Name" Margin="16,0,0,0" VerticalAlignment="Center" FontSize="48" FontWeight="Bold"/>
        </StackPanel>

        <ListView Name="lobbyMessages" Grid.Column="1" Grid.Row="1" Background="White" Margin="16" FontSize="18"/>

        <Grid Grid.Column="1" Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="enterMessage" Grid.Column="0" Background="White" FontSize="18" VerticalContentAlignment="Center" Padding="5" Margin="0,-13,-13,-17" Grid.ColumnSpan="2"/>

        </Grid>
        <Button Name="sendMessage" Grid.Row="2" Grid.Column="2" Content="Send" FontSize="18"  Margin="16,0,16,0" Click="sendMessage_Click" Height="76" VerticalAlignment="Top"/>
        <!-- Right column -->
        <StackPanel Grid.Column="2" Grid.Row="0" Margin="16">
            <Button Name="updateGUI" Content="Update GUI" FontSize="18" Padding="10,5" Click="updateGUI_Click"/>
            <Button Name="shareFileButton" Content="Share File" FontSize="18" Padding="10,5" Margin="0,10,0,0" Click="shareFileButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Margin="16">
            <TextBlock Text="Users in Lobby:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView Name="lobbyUsers" Background="White" Height="290"/>
            <TextBlock Text="Shared Files:" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <ListView Name="sharedFilesListView" Background="White" Height="290" MouseDoubleClick="sharedFilesListView_MouseDoubleClick"/>
        </StackPanel>
    </Grid>
</Page>