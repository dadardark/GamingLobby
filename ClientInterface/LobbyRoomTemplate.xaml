<Page x:Class="ClientInterface.LobbyRoomTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="LobbyRoomTemplate">

    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="1173*"/>
            <ColumnDefinition Width="266*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="156"/>
            <RowDefinition Height="518"/>
            <RowDefinition Height="156"/>
        </Grid.RowDefinitions>


        <Button Name="exitButton" Grid.Column="0" Grid.Row="0" Margin="16,16,16,16" Content="Exit" FontSize="24px" Click="exitButton_Click"/>
        <TextBlock Name="lobbyTitle" Grid.Column="1" Grid.Row="0" Text="Lobby Name" Background="White" Margin="16,16,16,16" TextAlignment="Center" FontSize="48" FontWeight="Bold"/>
        <ListView Name="lobbyMessages" Grid.ColumnSpan="2" Grid.Row="1" Background="White" Margin="16,16,16,16" FontSize="36"/>
        <ListView Name="lobbyUsers" Grid.Column="2" Grid.Row="1" Background="White" Margin="16,16,16,16"/>
        <TextBox Name="enterMessage" Grid.Row="2" Grid.ColumnSpan="2" Background="White" Margin="16,16,16,16" Text="Enter message" FontSize="36"/>
        <Button Name="sendMessage" Grid.Row="2" Grid.Column="2" Margin="16,16,16,16" Content="Enter" FontSize="24px" Click="sendMessage_Click"/>
        <Button Name ="updateGUI" Grid.Column="2" Grid.Row="0" Margin="16,16,16,16" Content="Update GUI" FontSize="24px" Click="updateGUI_Click"/>
    </Grid>

</Page>
