<Page x:Class="ClientInterface.LobbyRoomTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="LobbyRoomTemplate">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="roomName" HorizontalAlignment="Left" Height="91" Margin="154,10,0,0" TextWrapping="Wrap" Text="Room name" VerticalAlignment="Top" Width="1133" TextAlignment="Center" FontSize="36" Background="White"/>
        <TextBlock Name="userList" HorizontalAlignment="Left" Height="691" Margin="1308,10,0,0" VerticalAlignment="Top" Width="258" Text="Users" FontSize="36" Background="White" TextWrapping="WrapWithOverflow" Grid.ColumnSpan="2"/>
        <ScrollViewer Margin="0,-7,97,175">
             <TextBlock Name="roomMessages" HorizontalAlignment="Left" Height="577" Margin="48,124,0,0" VerticalAlignment="Top" Width="1239" Text="Chat messages" FontSize="36" Background="White" TextWrapping="WrapWithOverflow">
                <TextBlock.CacheMode>
                    <BitmapCache/>
                </TextBlock.CacheMode>
            </TextBlock>
        </ScrollViewer>
        <TextBox Name="chatBox" HorizontalAlignment="Left" Height="107" Margin="48,730,0,0" TextWrapping="Wrap" Text="ChatBox" VerticalAlignment="Top" Width="1239" TextAlignment="Center" FontSize="36" Background="White"/>
        <Button Name="exitLobby" HorizontalAlignment="Left" Height="91" Margin="48,10,0,0" VerticalAlignment="Top" Width="82" Content="Exit"/>
        <Button x:Name="sendMessage" HorizontalAlignment="Left" Height="107" Margin="1308,730,0,0" VerticalAlignment="Top" Width="258" Content="Enter" Click="sendMessage_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
