<Page x:Class="ClientInterface.LobbyRoomTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LobbyRoomTemplate">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="roomName" HorizontalAlignment="Left" Height="55" Margin="135,10,0,0" TextWrapping="Wrap" Text="Room name" VerticalAlignment="Top" Width="645" TextAlignment="Center" FontSize="36" Background="White" Grid.ColumnSpan="2"/>
        <ListBox Name="userList" HorizontalAlignment="Left" Height="363" Margin="579,70,0,0" VerticalAlignment="Top" Width="201" d:ItemsSource="{d:SampleData ItemCount=4}" Grid.ColumnSpan="2"/>
        <ListBox Name="roomMessages" HorizontalAlignment="Left" Height="251" Margin="48,70,0,0" VerticalAlignment="Top" Width="526" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBlock Name="chatBox" HorizontalAlignment="Left" Height="107" Margin="48,326,0,0" TextWrapping="Wrap" Text="ChatBox" VerticalAlignment="Top" Width="526" TextAlignment="Center" FontSize="36" Background="White"/>
        <Button Name="exitLobby" HorizontalAlignment="Left" Height="55" Margin="48,10,0,0" VerticalAlignment="Top" Width="82" Content="Exit"/>

    </Grid>
</Page>
