<Page x:Class="ClientInterface.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientInterface"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="Login">

    <Grid>
        <Grid>
            <TextBox Name ="login" Margin="0,52,0,0" FontSize="72" BorderThickness="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1092" TextAlignment="Center" Height="208">Login</TextBox>
            <Button Name="createUser" Content="Create user" Margin="0,685,0,103" Width="426" Click="createUserClick" HorizontalAlignment="Center" FontSize="24"/>
            <TextBox x:Name="enterUsername" HorizontalAlignment="Center" Height="163" TextWrapping="WrapWithOverflow" Text="Enter a username" VerticalAlignment="Center" Width="496" FontWeight="Bold" TextAlignment="Center" FontSize="36"/>
        </Grid>

    </Grid>
</Page>
